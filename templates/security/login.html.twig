{% extends 'base.html.twig' %}

{% block title %}{{ parent ()}}  | Se Connecter {% endblock %}

{% block body %}

    <div class="Login_Form">
        <form method="post">
            <h1> &lt;/ Hello Alumnus ! /&gt; </h1>

            <div class="Text_Login">
                <label for="">Vous n'avez pas encore de compte ?<a href="{{ path('app_register')  }}"> Contactez un Admin</a>, et rejoignez les autres alumni.</label>
            </div>

            <div class="txt_field">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  autocomplete="email" required autofocus>
                <span></span>
                <label for="inputEmail">Email</label>
            </div>

            <div class="txt_field">
                <input type="password" name="password" id="inputPassword"  autocomplete="current-password" required>
                <span></span>
                <label for="inputPassword">Mot De passe</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="Forget_Remember">
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi
                        </label>
                    </div>
                <div class="Forget_Mdp">
                    <label for=""><a href="">Mot de passe oubli√© ?</a></label>
                </div>
            </div>
            <div class="btn1">
                <button type="submit">
                    <span>Se Connecter</span>
                </button>
            </div>
        </form>
        <div class="side">
            <img src="{{ asset('images/side1.jpg') }}" alt="Gens heureux">
        </div>
    </div>

{% endblock %}
