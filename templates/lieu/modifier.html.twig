{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Modifier lieu | {{ parent() }}{% endblock %}

{% block body %}

    <div class="container m-auto w-50">
        {{ form_start(form) }}
        <h1 class="h1 text-center">Modifier le lieu :</h1>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            {{ button_label|default('Enregistrer') }}
        </button>
        <a href="{{ path('lieu_details', {'id': lieu.id}) }}" class="btn btn-warning">
            Annuler
        </a>
        {{ form_end(form) }}
    </div>

{% endblock %}

