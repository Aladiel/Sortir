{% extends 'base.html.twig' %}
{% form_theme sortieForm 'bootstrap_5_layout.html.twig' %}

{% block title %}
    Créer Sortie | {{ parent() }}
{% endblock %}

{% block body %}

    <div class="m-auto w-50">
        {{ form_start(sortieForm) }}
        <h1 class="h1">Créer une nouvelle Sortie :</h1>
        {{ form_widget(sortieForm) }}
        <button type="submit" class="btn btn-primary">
            {{ button_label|default('Enregistrer') }}
        </button >
        <a href="{{ path('main_home') }}" class="btn btn-warning">
            Annuler
        </a>
        {{ form_end(sortieForm) }}
    </div>

{% endblock %}

