{% extends 'base.html.twig' %}

{% block title %}
    {{ parent () }} | Créer une sortie
{% endblock %}

{% block body %}
    <div class="Sortie_Form">
        <h1>Créer une sortie</h1>
            <div class="Form_sortie1">
                {{ form_start(sortieForm) }}

                {{ form_widget(sortieForm) }}

                {{ form_end(sortieForm) }}
            </div>
            <div class="Form_sortie2">

                {{ form_start(lieuForm) }}
                {{ form_widget(lieuForm) }}
                {{ form_end(lieuForm) }}

            </div>
            <div class="Form_sortie3">
                {{ form_start(villeForm) }}

                {{ form_widget(villeForm) }}
                <div style="display: none; color: #f55;" id="error-message"></div>

                {{ form_end(villeForm) }}
            </div>

         <button class="btn1">Enregistrer</button>
         <button class="btn2">Publier la sortie</button>
         <button class="btn3">Annuler</button>
    </div>

{% endblock %}



{% block stylesheet %}
    <script
            src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
            integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI="
            crossorigin="anonymous">
    </script>
    <script src="../../public/js/scriptVilles.js"></script>

{% endblock %}