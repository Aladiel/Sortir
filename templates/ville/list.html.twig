

<div class="Villes_Admin pb-5">
    <div class="w-75 m-auto justify-content-center">

        <div class="m-auto">
            <h1 class="h1">Gérer les Villes</h1>

            <div class="Filtrer_Villes_Admin">
                <h2>Filtrer les sites</h2>
                <label for="">Le nom contient :
                    <input type="text">
                </label>
                <button class="Filtrer_Villes_Admin_btn1">Rechercher</button>
            </div>


            <table class="Tab_Villes_Admin">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Code Postal</th>
                    <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for ville in villes %}
                        <tr>
                            <td>{{ ville.id }}</td>
                            <td>{{ ville.nom }}</td>
                            <td>{{ ville.codePostal }}</td>
                            <td>
                                <a href="{{ path('lieu_creer', {'idv': ville.id}) }}">
                                    <button class="Tab_Campus_Admin_btn1">
                                        Choisir
                                    </button>
                                </a>
                                <a href="{{ path('ville_details', {'id': ville.id}) }}">
                                    <button class="Tab_Campus_Admin_btn1">Afficher</button>
                                </a>
                                <a href="{{ path('ville_modifer', {'id': ville.id}) }}">
                                    <button class="Tab_Campus_Admin_btn2">Modifier</button>
                                </a>
                            </td>
                        </tr>
                {% else %}
                    <tr>
                        <td>Aucune ville trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>